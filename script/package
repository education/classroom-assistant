#!/bin/sh
# Usage: script/package
set -e

COL='\033[1;32m'
NC='\033[0m' # No Color

echo_status() {
  echo "${COL}==> $1${NC}"
}

cd "$(dirname "$0")/.."

echo_status "Building and packaging app"
npm run package

if [ -z "$CLASSROOM_DESKTOP_OSX_DEVELOPER_ID" ]; then
  echo_status "CLASSROOM_DESKTOP_OSX_DEVELOPER_ID not set, the app will not be signed"
else
  echo_status "Signing Mac app"
  codesign --deep --force --verbose --sign "$CLASSROOM_DESKTOP_OSX_DEVELOPER_ID" out/GitHub\ Classroom-darwin-x64/GitHub\ Classroom.app
fi

echo_status "Done!"
